{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block content %}
    <div>
        <h1>Welcome to admin</h1>
        <table>
            <thead>
                 <tr>
                     <th>Titre</th>
                 </tr>
            </thead>
            <tbody>
               {% for post in posts %}
                   <tr>
                       <td>{{ post.title }}</td>
                       <td>{{ post.publishedAt|date("m/d/Y") }}
                       <td>
                           <div>
                               <a href="{{ path('admin_new_post') }}">Cr√©er</a>
                               <a href="{{ path('admin_post_show', {id: post.id}) }}">Voir</a>
                               <a href="{{ path('admin_post_edit', {id: post.id}) }}">Modifier</a>
                               {{ include('admin/blog/_delete_form.html.twig') }}
                           </div>
                       </td>
                   </tr>
               {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
